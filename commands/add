#!/bin/sh

usage() {
	git add -h 2>&1 | sed 's/usage\:\ git/usage\:\ git template/g' >&2
	exit 1
}

main() {
	local re='-+h(elp)?(\ |$)'; [[ "$@" =~ $re ]] && usage
	checkTemplateExist
	local wasLocked=0
	isLocked && wasLocked=1
	# git add
	unlockTemplate
	cd "$DEFINE_TEMPLATE_GITPATH"
	git add "$@"
	# restore lock state
	[ $wasLocked == 1 ] && lockTemplate
}
main "$@"